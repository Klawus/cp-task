{
  "name": "cp-recruitment-task",
  "version": "1.0.0",
  "description": "Code&Pepper recruitment task",
  "main": "index.js",
  "scripts": {
    "start": "docker compose up web_api",
    "build": "tsc --skipLibCheck --outDir build/src",
    "docker-build": "BRANCH_NAME=$(git rev-parse --abbrev-ref HEAD | sed 's/[/]/-/g'); docker compose build builder && docker tag app:local app:${BRANCH_NAME}",
    "docker-build-prod": "docker build -t web-api:latest -f ./docker/prod/Dockerfile .",
    "down": "docker compose down -v",
    "watch": "docker compose up builder",
    "integration-tests": "cd build && node ../node_modules/.bin/mocha \"src/tests/**/*.spec.js\" --file=\"src/tests/bootstrap.js\" --exit",
    "services-units": "cd build && node ../node_modules/.bin/mocha \"src/{,!(tests)/**}/*.spec.js\"",
    "services-units-coverage": "nyc npm run services-units",
    "integration": "docker compose run --rm js npm run integration-tests",
    "units": "docker compose run --rm js npm run services-units-coverage",
    "generate-migration": "docker compose run --rm js ./node_modules/.bin/typeorm migration:generate ./src/app/infra/database/migrations/migration -d ./build/src/config/db",
    "run-migrations": "docker compose run --rm js ./node_modules/.bin/typeorm migration:run -d ./build/src/config/db",
    "revert-migration": "docker compose run --rm js ./node_modules/.bin/typeorm migration:revert -d ./build/src/config/db",
    "create-migration": "docker compose run --rm js ./node_modules/.bin/typeorm migration:create ./src/app/infra/database/migrations/migration",
    "lint": "./node_modules/.bin/eslint --ext .ts ./",
    "lint:fix": "npm run lint -- --fix",
    "format:all": "prettier --write ."
  },
  "author": {
    "name": "MikoÅ‚aj Glistak",
    "email": "mikolaj.glistak@gmail.com"
  },
  "license": "ISC",
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.3",
    "@tsconfig/node20": "^20.1.2",
    "@types/chai": "^4.3.10",
    "@types/chai-as-promised": "^7.1.8",
    "@types/cors": "^2.8.16",
    "@types/express": "^4.17.21",
    "@types/mocha": "^10.0.4",
    "@types/node": "^20.9.2",
    "@types/sinon": "^17.0.2",
    "@types/supertest": "^2.0.16",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/yamljs": "^0.2.34",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "chai": "^4.3.10",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.54.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-unicorn": "^49.0.0",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "prettier": "^3.1.0",
    "sinon": "^17.0.1",
    "supertest": "^6.3.3",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "awilix": "^9.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "json-refs": "^3.0.15",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.21",
    "swagger-ui-express": "^5.0.0",
    "typeorm": "^0.3.17",
    "typeorm-naming-strategies": "^4.1.0",
    "winston": "^3.11.0",
    "yamljs": "^0.3.0",
    "zod": "^3.22.4"
  }
}
